{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "name": "Santiago Vazquez Portfolio Design System",
  "version": "1.0.0",
  "lastUpdated": "2024-12-28",

  "tokens": {
    "colors": {
      "semantic": {
        "base": {
          "value": "#fdfcf8",
          "css": "var(--color-base)",
          "usage": "Primary background, cards, elevated surfaces"
        },
        "surface": {
          "value": "#f2f0e9",
          "css": "var(--color-surface)",
          "usage": "Section backgrounds, subtle elevation"
        },
        "accent": {
          "value": "#cc8b65",
          "css": "var(--color-accent)",
          "usage": "Primary actions, highlights, links on hover"
        },
        "tension": {
          "value": "#7d9c8b",
          "css": "var(--color-tension)",
          "usage": "Tags, secondary highlights, status indicators"
        },
        "ink": {
          "value": "#36322f",
          "css": "var(--color-ink)",
          "usage": "Primary text, borders, dark backgrounds"
        }
      },
      "opacity": {
        "text": {
          "muted": "40%",
          "secondary": "60%",
          "primary": "100%"
        },
        "border": {
          "subtle": "8%",
          "medium": "15%",
          "strong": "25%"
        },
        "background": {
          "subtle": "5%",
          "light": "10%",
          "medium": "20%"
        }
      }
    },

    "typography": {
      "families": {
        "headline": {
          "value": "'Fraunces', 'Times New Roman', serif",
          "css": "var(--font-headline)",
          "usage": "Headings, titles, emphasis"
        },
        "data": {
          "value": "'DM Mono', 'Input Mono', 'Courier New', monospace",
          "css": "var(--font-data)",
          "usage": "Labels, metadata, body text, code"
        }
      },
      "sizes": {
        "xs": "0.625rem",
        "sm": "0.75rem",
        "base": "0.875rem",
        "md": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "2rem",
        "4xl": "2.5rem",
        "5xl": "3rem",
        "6xl": "3.5rem",
        "7xl": "4.5rem",
        "8xl": "6rem"
      },
      "weights": {
        "light": 300,
        "normal": 400,
        "medium": 500,
        "semibold": 600,
        "bold": 700
      },
      "tracking": {
        "tight": "-0.02em",
        "normal": "0",
        "wide": "0.04em",
        "widest": "0.15em"
      },
      "leading": {
        "tight": 1.1,
        "snug": 1.3,
        "normal": 1.5,
        "relaxed": 1.6,
        "loose": 1.8
      }
    },

    "spacing": {
      "scale": {
        "0": "0",
        "1": "0.25rem",
        "2": "0.5rem",
        "3": "0.75rem",
        "4": "1rem",
        "5": "1.25rem",
        "6": "1.5rem",
        "8": "2rem",
        "10": "2.5rem",
        "12": "3rem",
        "16": "4rem",
        "20": "5rem",
        "24": "6rem",
        "32": "8rem"
      },
      "section": {
        "paddingY": {
          "mobile": "6rem",
          "desktop": "8rem"
        },
        "paddingX": {
          "mobile": "1.5rem",
          "tablet": "3rem",
          "desktop": "5rem"
        }
      }
    },

    "borders": {
      "radius": {
        "sm": "0.5rem",
        "md": "0.75rem",
        "lg": "1rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "full": "9999px"
      },
      "width": {
        "thin": "1px",
        "medium": "2px",
        "thick": "3px"
      }
    },

    "shadows": {
      "diffused": {
        "value": "inset 0px 2px 8px -2px rgba(54, 50, 47, 0.08), 0px 8px 24px -6px rgba(54, 50, 47, 0.04)",
        "css": "var(--shadow-diffused)",
        "usage": "Default card shadow"
      },
      "deep": {
        "value": "inset 0px 4px 16px -4px rgba(54, 50, 47, 0.12), 0px 12px 32px -8px rgba(54, 50, 47, 0.08)",
        "css": "var(--shadow-deep)",
        "usage": "Hover state, elevated elements"
      },
      "glow": {
        "accent": "0 0 40px -10px rgba(204, 139, 101, 0.3)",
        "tension": "0 0 40px -10px rgba(125, 156, 139, 0.3)"
      }
    },

    "transitions": {
      "duration": {
        "instant": "0ms",
        "fast": "150ms",
        "normal": "300ms",
        "slow": "500ms",
        "slower": "800ms"
      },
      "easing": {
        "default": "ease",
        "smooth": "cubic-bezier(0.16, 1, 0.3, 1)",
        "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)",
        "linear": "linear"
      }
    },

    "animation": {
      "reveal": {
        "blur": "12px",
        "y": "30px",
        "duration": "1s"
      },
      "hover": {
        "scale": {
          "subtle": 1.02,
          "medium": 1.05,
          "emphasis": 1.1
        },
        "translate": {
          "lift": "-4px"
        },
        "rotate": {
          "subtle": "6deg",
          "emphasis": "45deg"
        }
      }
    },

    "interactive": {
      "magnetic": {
        "subtle": 0.15,
        "normal": 0.25,
        "strong": 0.4
      },
      "focus": {
        "ring": "2px solid var(--color-accent)",
        "offset": "2px"
      },
      "touchTarget": {
        "minimum": "44px"
      }
    }
  },

  "components": {
    "card": {
      "background": "var(--color-base)",
      "border": "1px solid color-mix(in srgb, var(--color-ink) 8%, transparent)",
      "borderRadius": "1.25rem",
      "padding": {
        "sm": "1rem",
        "md": "1.5rem",
        "lg": "2rem"
      },
      "shadow": "var(--shadow-diffused)",
      "hover": {
        "borderColor": "color-mix(in srgb, var(--color-accent) 40%, transparent)",
        "shadow": "var(--shadow-deep)",
        "transform": "translateY(-4px)"
      },
      "transition": "all 0.3s cubic-bezier(0.16, 1, 0.3, 1)"
    },

    "button": {
      "primary": {
        "background": "var(--color-ink)",
        "color": "var(--color-base)",
        "borderRadius": "2rem",
        "padding": "0.75rem 1.5rem",
        "hover": {
          "background": "var(--color-accent)"
        }
      },
      "secondary": {
        "background": "transparent",
        "border": "1px solid var(--color-ink)",
        "color": "var(--color-ink)",
        "borderRadius": "2rem",
        "padding": "0.75rem 1.5rem",
        "hover": {
          "background": "var(--color-ink)",
          "color": "var(--color-base)"
        }
      }
    },

    "badge": {
      "background": "color-mix(in srgb, var(--color-surface) 80%, transparent)",
      "border": "1px solid color-mix(in srgb, var(--color-ink) 8%, transparent)",
      "borderRadius": "9999px",
      "padding": "0.625rem 1.25rem",
      "font": {
        "family": "var(--font-data)",
        "size": "10px",
        "letterSpacing": "0.15em",
        "textTransform": "uppercase"
      }
    },

    "tag": {
      "background": "color-mix(in srgb, var(--color-tension) 15%, var(--color-surface))",
      "color": "var(--color-tension)",
      "borderRadius": "1rem",
      "padding": "0.375rem 0.75rem",
      "font": {
        "size": "0.625rem",
        "letterSpacing": "0.04em",
        "textTransform": "uppercase"
      }
    },

    "link": {
      "color": "inherit",
      "hoverColor": "var(--color-accent)",
      "underline": {
        "height": "1px",
        "background": "var(--color-accent)",
        "transform": "scaleX(0)",
        "hoverTransform": "scaleX(1)",
        "transition": "transform 0.4s cubic-bezier(0.16, 1, 0.3, 1)"
      }
    },

    "sectionHeader": {
      "icon": {
        "size": "2xl",
        "marginRight": "1rem"
      },
      "label": {
        "font": "var(--font-data)",
        "size": "10px",
        "letterSpacing": "0.15em",
        "textTransform": "uppercase",
        "color": "var(--color-accent)"
      },
      "title": {
        "font": "var(--font-headline)",
        "size": {
          "mobile": "2rem",
          "tablet": "2.5rem",
          "desktop": "3rem"
        },
        "weight": 500,
        "color": "var(--color-ink)"
      },
      "description": {
        "font": "var(--font-data)",
        "size": "1rem",
        "color": "color-mix(in srgb, var(--color-ink) 50%, transparent)",
        "maxWidth": "32rem"
      }
    }
  },

  "patterns": {
    "grainOverlay": {
      "opacity": 0.3,
      "mixBlendMode": "multiply",
      "backgroundImage": "var(--glass-grain)"
    },
    "ambientGlow": {
      "accent": {
        "size": "400px",
        "blur": "100px",
        "opacity": "12%"
      },
      "tension": {
        "size": "300px",
        "blur": "80px",
        "opacity": "8%"
      }
    }
  },

  "accessibility": {
    "colorContrast": {
      "minimum": "4.5:1",
      "enhanced": "7:1"
    },
    "focusIndicator": {
      "style": "2px solid var(--color-accent)",
      "offset": "2px"
    },
    "reducedMotion": {
      "respectPreference": true,
      "fallback": "instant transitions"
    },
    "touchTargets": {
      "minimum": "44px",
      "recommended": "48px"
    },
    "semanticStructure": {
      "landmarks": ["nav", "main", "footer"],
      "headingHierarchy": "h1 > h2 > h3, no skipping levels"
    }
  },

  "seo": {
    "requiredMeta": [
      "title",
      "description",
      "viewport",
      "canonical"
    ],
    "openGraph": [
      "og:title",
      "og:description",
      "og:image",
      "og:url",
      "og:type"
    ],
    "twitterCard": [
      "twitter:card",
      "twitter:title",
      "twitter:description",
      "twitter:image"
    ],
    "structuredData": [
      "Person",
      "WebSite",
      "BreadcrumbList"
    ]
  }
}

